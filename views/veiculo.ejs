  <script>
      updateData();
      function bloque(element) {
        input =   document.querySelectorAll('select');
        if(element.value > 0){
          input.forEach(select =>{
              if(select  != element){
                select.value = null;
                select.setAttribute("disabled", true);
                select.selectedIndex = 0
              }
          })
        }else{
          input.forEach(select =>{
                select.removeAttribute("disabled");  
          })
        }
      }

     function bloque_dinamico(element,id_1,id_2){
